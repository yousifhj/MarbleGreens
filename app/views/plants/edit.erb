<h1>Edit Plant</h1>
    
<form action="/plants/<%= @plants.id%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">

    <h3>Name: <input type="text" name="name" value= "<%= @plant.name %>"></h3>
    <h3>Water: <input type="text" name="water" value= "<%= @hplant.water %>"></h3>
    <h3>Light: <input type="text" name="light" value= "<%= @plant.light %>"></h3>
    <h3>Price: <input type="integer" name="price" value= "<%= @plant.price %>"></h3>
    <h3>Grown at: <input type="integer" name="greenhouse_id" value= "<%= @plant.greenhouse_id %>"></h3>
    
    <input type="submit" name="submit" value="Update Habit">
</form>